
@{
    ViewBag.Title = "Colegiaturas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/Content/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
<link href="~/Content/vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet">
<link href="~/Content/vendors/alertifyjs/css/alertify.css" rel="stylesheet" />

<div class="">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <h2><i class="fa fa-bars"></i> Colegiaturas <small>Mantenimiento</small></h2>
           
            <div class="x_content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="well col-md-12">
                                <h2><i class="fa fa-list-alt"></i> Alumnos</h2>
                                <br />
                                <table class="table  table-bordered table-hover table-sm" id="tblAlumnos" cellspacing="0">
                                    <thead>
                                        <tr class="headings">
                                            <th class="column-title">#</th>
                                            <th class="column-title">Nombre</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewBag.Alumnos)
                                        {
                                            @*<tr value="@item.idAlumno">@item.nombres @item.primerApellido @item.segundoApellido</tr>*@
                                            <tr>
                                                <td>@item.idAlumno</td>
                                                <td>@item.nombres @item.primerApellido @item.segundoApellido</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="well col-md-12">
                                <h2><i class="fa fa-list-alt"></i> Matriculas</h2>
                                <br />
                                <table class="table table-striped table-bordered table-hover table-sm" id="tblMatriculas" cellspacing="0">
                                    <thead>
                                        <tr class="headings">
                                            <th class="column-title">#</th>
                                            <th class="column-title" hidden>Alumno</th>
                                            <th class="column-title">Grado</th>
                                            <th class="column-title">Año Escolar</th>
                                            <th class="column-title" hidden>Tipo Ingreso</th>
                                            <th class="column-title">Turno</th>
                                            <th class="column-title" hidden>Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="well col-md-6">
                        <div class="x_title">
                            <h2><i class="fa fa-dollar"></i> Colegiaturas</h2>
                            <div class="clearfix">
                                <div class="inputs pull-right">
                                    <button class="btn btn-round btn-danger btn-sm" onclick="Eliminar();"><i class="fa fa-trash"></i> Eliminar</button>
                                </div>
                                <div class="inputs pull-right">
                                    <button class="btn btn-round btn-warning btn-sm" onclick="Editar();"><i class="fa fa-edit"></i> Modificar</button>
                                </div>
                                <div class="inputs pull-right">
                                    <button class="btn btn-round btn-primary btn-sm" onclick="Nuevo();"><i class="fa fa-plus-circle"></i> Nuevo</button>
                                </div>
                            </div>
                        </div>
                        <br /><br />
                        <table class="table table-striped table-bordered table-hover table-sm" id="tblColegiaturas" cellspacing="0">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">#</th>
                                    <th class="column-title">Núm.</th>
                                    <th class="column-title">Fecha</th>
                                    <th class="column-title">Monto</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>            
            </div>
        </div>
    </div>
</div>


<div id="modalColegiatura" class="modal fade draggable-modal modalx" tabindex="-1" data-backdrop="static" data-keyboard="false" role="alertdialog" aria-hidden="true">
    <div class="modal-dialog">
        <div id="modal-content" class="modal-content">
            <div class="modal-header">
                <h4 id="modalHeader" class="text-center" style="margin-bottom: 0px;"></h4>
            </div>
            <div class="modal-body" id="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-6 col-xs-12 form-group has-feedback">
                        <div class="col-md-12 text-left" for="Num">Número</div>
                        <div class="col-md-12">
                            <input type="text" class="form-control has-feedback-left" id="Num" placeholder="Número" />
                            <span class="fa fa-life-saver form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-6 col-xs-12 xdisplay_inputx form-group has-feedback">
                        <div class="col-md-12 text-left" for="Fecha">Fecha</div>
                        <div class="col-md-12">
                            <input type="text" class="form-control has-feedback-left" id="Fecha" value="@ViewBag.Fecha" placeholder="Fecha" aria-describedby="inputSuccess2Status4" />
                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                            <span id="inputSuccess2Status4" class="sr-only">(success)</span>
                        </div>
                    </div>
                    <div class="col-md-12 col-sm-6 col-xs-12 form-group has-feedback">
                        <div class="col-md-12 text-left" for="Monto">Monto</div>
                        <div class="col-md-12">
                            <input type="text" class="form-control has-feedback-left" id="Monto" placeholder="Monto" />
                            <span class="fa fa-dollar form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="update">Actualizar</button>
                <button type="button" class="btn btn-success" id="save">Guardar</button>
                <button type="button" class="btn btn-primary" id="cancel" data-dismiss="modal">Cancelar</button>

            </div>
        </div>
    </div>
</div>


@section Scripts{
   <script src="~/Content/vendors/moment/min/moment.min.js"></script>
<script src="~/Content/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/Content/vendors/jquery.inputmask/dist/min/jquery.inputmask.bundle.min.js"></script>
<script src="~/Content/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/Content/vendors/dropzone/dist/min/dropzone.min.js"></script>
<script src="~/Content/vendors/alertifyjs/alertify.js"></script>

    <script src="~/Resources/js/Colegiaturas/Colegiaturas.js"></script>
}
