
@{
    ViewBag.Title = "Matriculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/Content/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
<link href="~/Content/vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet">
<link href="~/Content/vendors/alertifyjs/css/alertify.css" rel="stylesheet" />


<div class="">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
                <h2><i class="fa fa-bars"></i> Matriculas <small>Mantenimiento</small></h2>
               
            <div class="x_content" style="font-size:small">
                <div class="row table-responsive">
                    <div class="well col-md-3">
                            <h2><i class="fa fa-list-alt"></i> Alumnos</h2>
                        <br /><br /><br />
                        <table class="table table-striped table-bordered table-hover table-sm" id="tblAlumnos" cellspacing="0">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">#</th>
                                    <th class="column-title">Nombre</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Alumnos)
                                {
                                    @*<tr value="@item.idAlumno">@item.nombres @item.primerApellido @item.segundoApellido</tr>*@
                                    <tr>
                                        <td>@item.idAlumno</td>
                                        <td>@item.nombres @item.primerApellido @item.segundoApellido</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="well col-md-9">
                        <div class="x_title">
                            <h2><i class="fa fa-list-alt"></i> Matriculas</h2>
                            <div class="clearfix">
                                <div class="actions">
                                    <div class="inputs pull-right" hidden>
                                        <div class="col-md-2 text-left" for="Num">Alumno</div>
                                        <div class="col-md-12">
                                            <select class="form-control" id="Estudiante" onchange="getExpediente()">
                                                <option value="0" selected>Seleccione</option>
                                                @foreach (var item in ViewBag.Alumnos)
                                                {
                                                    <option value="@item.idAlumno">@item.nombres @item.primerApellido @item.segundoApellido</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="inputs pull-right">
                                        <button class="btn btn-round btn-danger btn-sm" onclick="Eliminar();"><i class="fa fa-trash"></i> Eliminar</button>
                                    </div>

                                    <div class="inputs pull-right">
                                        <button class="btn btn-round btn-warning btn-sm" onclick="Editar();"><i class="fa fa-edit"></i> Modificar</button>
                                    </div>

                                    <div class="inputs pull-right">
                                        <button class="btn btn-round btn-primary btn-sm" onclick="Nuevo();"><i class="fa fa-plus-circle"></i> Nuevo</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br /><br />
                        <table class="table table-striped table-bordered table-hover table-sm" id="tblMatriculas" cellspacing="0">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">#</th>
                                    <th class="column-title" hidden>idAlumno</th>
                                    <th class="column-title">Alumno</th>
                                    <th class="column-title" hidden>IdGrado</th>
                                    <th class="column-title">Grado</th>
                                    <th class="column-title">Año Escolar</th>
                                    <th class="column-title" hidden>#Tipo Ingreso</th>
                                    <th class="column-title">Tipo Ingreso</th>
                                    <th class="column-title" hidden>#Turno</th>
                                    <th class="column-title">Turno</th>
                                    <th class="column-title">Monto</th>
                                    <th class="column-title">Colegiaturas</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    
                </div>
              

            </div>
        </div>
    </div>
</div>


<div id="modalMatricula" class="modal fade draggable-modal modalx" tabindex="-1" data-backdrop="static" data-keyboard="false" role="alertdialog" aria-hidden="true">
    <div class="modal-dialog">
        <div id="modal-content" class="modal-content">
            <div class="modal-header">
                <h4 id="modalHeader" class="text-center" style="margin-bottom: 0px;"></h4>
            </div>
            <div class="modal-body" id="modal-body">
                <div class="row form-group form-md-line-input has-info" >
                    <div class="col-md-4 text-left">Grado:</div>
                    <div class="col-md-8">
                        <select class="form-control" id="Grado" onchange="">
                            <option value="0" selected>Seleccione</option>
                            @foreach (var item in ViewBag.Grados)
                            {
                                <option value="@item.idGrado">@item.descripcion - @item.nivelEscolar</option>
                            }
                        </select>

                    </div>
                </div>
                <div class="row form-group form-md-line-input has-info">
                    <div class="col-md-4 text-left">Año Escolar:</div>
                    <div class="col-md-8">
                        <input id="AnioEscolar" class="form-control" placeholder="Año Escolar" />
                    </div>
                </div>
                <div class="row form-group form-md-line-input has-info">
                    <div class="col-md-4 text-left">Tipo Ingreso:</div>
                    <div class="col-md-8">
                        <select class="form-control" id="TipoIngreso" onchange="">
                            <option value="0" selected>Seleccione</option>
                            <option value="1">Nuevo Ingreso</option>
                            <option value="2">Antiguo Ingreso</option>
                        </select>
                    </div>
                </div>
                <div class="row form-group form-md-line-input has-info">
                    <div class="col-md-4 text-left">Turno:</div>
                    <div class="col-md-8">
                        <select class="form-control" id="Turno" onchange="">
                            <option value="0" selected>Seleccione</option>
                            <option value="1">Matutino</option>
                            <option value="2">Vespertino</option>
                            <option value="3">Nocturno</option>
                        </select>
                    </div>
                </div>
                <div class="row form-group form-md-line-input has-info">
                    <div class="col-md-4 text-left">Valor de la Matricula:</div>
                    <div class="col-md-8">
                        <input id="Monto" type="number" class="form-control" placeholder="Valor de la Matricula" />
                    </div>
                </div>
                <div class="row form-group form-md-line-input has-info">
                    <div class="col-md-4 text-left">Cantidad de Colegiaturas:</div>
                    <div class="col-md-8">
                        <input id="Colegiaturas" type="number" class="form-control" placeholder="Cantidad de Colegiaturas" />
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="update">Actualizar</button>
                <button type="button" class="btn btn-success" id="save">Guardar</button>
                <button type="button" class="btn btn-primary" id="cancel" data-dismiss="modal">Cancelar</button>

            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modalColegiaturas" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="modalContent">
            <div class="modal-header">
                <h4 id="modalHeaderC" class="text-center" style="margin-bottom: 0px;"></h4>
            </div>
            <div class="modal-body" id="modalBody" style="font-size:small;">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="PatientName">Número</label>
                            <input type="number" class="form-control" id="Num" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="DateIn">Fecha</label>
                            <div id="DateIn" class="input-group date form_date" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd" style="padding-top: 3%;">
                                <input class="form-control" size="16" type="text" value="@ViewBag.Fecha" id="DateProcedure" onchange="" readonly>
                                <a class="input-group-addon btn btn-info"><i class="fas fa-calendar text-white"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="Weight">Pago/Abono</label>
                            <input type="number" class="form-control" id="Payment" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-sm" id="tblMedicalRecordDetail" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Fecha</th>
                                    <th>Monto</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="DownloadMedicalRecod" onclick="DownloadMedicalRecod();"><i class="fas fa-download">Descargar</i></button>
                <button type="button" class="btn btn-danger" id="Save2" onclick="DeleteMedicalRercord();">Eliminar</button>
                <button type="button" class="btn btn-warning" id="Upd" onclick="UpdateMedicalRercord();">Modificar</button>
                <button type="button" class="btn btn-success" id="Save2" onclick="SaveMedicalRercord();">Guardar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    @*@Scripts.Render("~/Scripts/RegistroVisitas")*@

    <script src="~/Content/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/vendors/alertifyjs/alertify.js"></script>
    <script src="~/Resources/js/Matriculas/Matriculas.js"></script>
}






